<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="10dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/dark_card"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/border_color"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/task_card_background">

        <!-- Indicador de tipo de tarea (barra lateral) -->
        <View
            android:id="@+id/vTaskTypeIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@drawable/task_type_indicator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Título de la tarea"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/cbTaskCompleted"
            app:layout_constraintStart_toEndOf="@+id/vTaskTypeIndicator"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Título de la tarea" />

        <TextView
            android:id="@+id/tvTaskDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Descripción de la tarea"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="@+id/tvTaskTitle"
            app:layout_constraintStart_toEndOf="@+id/vTaskTypeIndicator"
            app:layout_constraintTop_toBottomOf="@+id/tvTaskTitle"
            tools:text="Esta es una descripción de la tarea un poco más larga que puede ocupar varias líneas." />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbTaskCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:buttonTint="@color/accent_cyan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnDeleteTask"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteTask"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Eliminar tarea"
            app:backgroundTint="@color/button_danger"
            app:cornerRadius="24dp"
            app:elevation="4dp"
            app:icon="@drawable/ic_delete"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            app:iconPadding="0dp"
            app:iconTint="@color/text_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>